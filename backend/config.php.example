<?php
/**
 * Database Configuration (Sample)
 *
 * このファイルを config.php にコピーして、実際の接続情報を設定してください。
 *
 * コピーコマンド:
 *   cp config.php.example config.php
 *
 * 注意: config.php は .gitignore に含まれており、Gitにコミットされません
 */

// エラー表示設定
// 開発環境: ON、本番環境: OFF
error_reporting(E_ALL);
ini_set('display_errors', 1);  // 本番環境では 0 に設定

// タイムゾーン設定
date_default_timezone_set('Asia/Tokyo');

// ===========================
// データベース接続情報
// ===========================

// ローカル開発環境（例）
define('DB_HOST', 'localhost');
define('DB_USER', 'root');
define('DB_PASS', 'your_password_here');  // ⚠️ 実際のパスワードに変更
define('DB_NAME', 'satellite_viewer');
define('DB_PORT', 3306);
define('DB_CHARSET', 'utf8mb4');

// リモートMySQL（例: さくらのレンタルサーバー）
// define('DB_HOST', 'your-database-host.example.com');
// define('DB_USER', 'your_database_user');
// define('DB_PASS', 'your_database_password');
// define('DB_NAME', 'satellite_viewer');
// define('DB_PORT', 3306);
// define('DB_CHARSET', 'utf8mb4');

// ===========================
// PDO接続オプション
// ===========================
define('PDO_OPTIONS', [
    PDO::ATTR_ERRMODE => PDO::ERRMODE_EXCEPTION,
    PDO::ATTR_DEFAULT_FETCH_MODE => PDO::FETCH_ASSOC,
    PDO::ATTR_EMULATE_PREPARES => false,
    PDO::MYSQL_ATTR_INIT_COMMAND => "SET NAMES utf8mb4"
]);

// ===========================
// アプリケーション設定
// ===========================
define('APP_NAME', 'Satellite Data Viewer');
define('APP_VERSION', '1.0.0');
define('API_RESPONSE_TYPE', 'application/json');

// ===========================
// CORS設定（フロントエンドが別ドメインの場合に有効化）
// ===========================
// define('ALLOW_CORS', true);
// define('CORS_ORIGIN', '*');  // 本番環境では具体的なドメインを指定: 'https://example.com'

/**
 * データベース接続を取得
 *
 * @return PDO データベース接続オブジェクト
 * @throws PDOException 接続失敗時
 */
function getDbConnection() {
    static $pdo = null;

    if ($pdo === null) {
        try {
            $dsn = sprintf(
                "mysql:host=%s;port=%d;dbname=%s;charset=%s",
                DB_HOST,
                DB_PORT,
                DB_NAME,
                DB_CHARSET
            );

            $pdo = new PDO($dsn, DB_USER, DB_PASS, PDO_OPTIONS);

        } catch (PDOException $e) {
            // 本番環境ではエラー詳細を隠す
            error_log("Database connection error: " . $e->getMessage());
            throw new PDOException("データベース接続エラーが発生しました", 500);
        }
    }

    return $pdo;
}

/**
 * エラーレスポンスを返す
 *
 * @param string $message エラーメッセージ
 * @param int $code HTTPステータスコード
 */
function sendErrorResponse($message, $code = 500) {
    http_response_code($code);
    header('Content-Type: ' . API_RESPONSE_TYPE);
    echo json_encode([
        'success' => false,
        'error' => $message,
        'timestamp' => date('c')
    ], JSON_UNESCAPED_UNICODE);
    exit;
}

/**
 * 成功レスポンスを返す
 *
 * @param mixed $data レスポンスデータ
 * @param string $message メッセージ（オプション）
 */
function sendSuccessResponse($data, $message = null) {
    http_response_code(200);
    header('Content-Type: ' . API_RESPONSE_TYPE);

    $response = [
        'success' => true,
        'data' => $data,
        'timestamp' => date('c')
    ];

    if ($message !== null) {
        $response['message'] = $message;
    }

    echo json_encode($response, JSON_UNESCAPED_UNICODE | JSON_PRETTY_PRINT);
    exit;
}

/**
 * CORS設定を適用
 */
function applyCorsHeaders() {
    if (defined('ALLOW_CORS') && ALLOW_CORS) {
        header('Access-Control-Allow-Origin: ' . (defined('CORS_ORIGIN') ? CORS_ORIGIN : '*'));
        header('Access-Control-Allow-Methods: GET, POST, PUT, DELETE, OPTIONS');
        header('Access-Control-Allow-Headers: Content-Type, Authorization');

        // OPTIONSリクエストへの対応
        if ($_SERVER['REQUEST_METHOD'] === 'OPTIONS') {
            http_response_code(200);
            exit;
        }
    }
}
